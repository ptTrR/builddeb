#!/bin/bash
source lib/linux
CORES=`nproc`
UP="../patches"
RED="\e[1;31m"
GRN="\e[1;32m"
YLW="\e[1;33m"
PNK="\e[1;35m"
FIN="\e[0m"
userdata () {
echo ""
echo "Please create a userdata.txt file"
while [ true ] ; do
read -t 10 -n 1
if [ $? = 0 ] ; then
exit ;
else
echo "run make config"
fi
done
}

if ls userdata.txt > /dev/null 2>&1;
	then echo "" && echo -e "${GRN}userdata file found${FIN}.";
	else userdata;
fi
source userdata.txt
mkdir -p linux
cp userdata.txt linux/
cd linux
clean
echo
download
extract
setup
echo
userpatches
sed_name
defconfig
if `grep -Fx "menuconfig=1" "../userdata.txt" >/dev/null;`
    then menuconfig ;
fi
builddeb